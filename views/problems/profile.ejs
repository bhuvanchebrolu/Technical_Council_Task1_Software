<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
  <div class="card shadow-lg border-0">
    <div class="row g-0">
      <div class="col-md-4 bg-light p-4 d-flex flex-column align-items-center">
      <img src="<%= user.profilePicture.url || '/images/default-profile.png' %>"
          alt="Profile Picture"
          class="rounded-circle img-thumbnail mb-3"
          style="width: 180px; height: 180px; object-fit: cover;">

      <form method="POST" action="/problems/<%=user._id%>/profile/edit?_method=PUT" enctype="multipart/form-data" class="needs-validation" novalidate>
        <input name="user[profilePicture]" type="file" class="form-control" required>
        <button type="submit" class="btn btn-primary">Upload pic</button>
      </form>
    </div>
      <!-- User Info -->
      <div class="col-md-8">
        <div class="card-body p-4">

          <h3 class="card-title mb-2">
            <i class="fa-solid fa-user text-primary me-2"></i>
            <%= user.username || 'No username set' %>
          </h3>

          <p class="text-muted mb-1">
            <i class="fa-solid fa-at me-2"></i><strong>Username:</strong> <%= user.username || "No name set" %>
          </p>

          <p class="text-muted mb-1">
            <i class="fa-solid fa-envelope me-2"></i><strong>Email:</strong> <%= user.email %>
          </p>

          <p class="text-muted mb-1">
            <i class="fa-solid fa-cake-candles me-2"></i><strong>Dept:</strong>
            <%= user.dept || "No dept set" %>
          </p>

          <p class="text-muted mb-1">
            <i class="fa-solid fa-hashtag me-2"></i><strong>Age:</strong>
            <%= user.age || 'Not calculated' %>
          </p>

          <p class="text-muted mb-1">
            <i class="fa-solid fa-phone me-2"></i><strong>Phone:</strong>
            <%= user.phoneNumber || 'Not set' %>
          </p>

          <p class="text-muted mb-1">
            <i class="fa-brands fa-linkedin me-2"></i><strong>LinkedIn:</strong>
            <% if (user.linkedInId) { %>
              <a href="https://linkedin.com/in/<%= user.linkedInId %>" target="_blank" class="badge bg-primary text-decoration-none">@<%= user.linkedInId %></a>
            <% } else { %>
              Not set
            <% } %>
          </p>

          <div class="mt-3">
            <a href="/problems/<%=user._id%>/profile/edit" class="btn btn-outline-dark btn-sm">
              <i class="fa-solid fa-pen-to-square me-1"></i>Edit Profile
            </a>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
